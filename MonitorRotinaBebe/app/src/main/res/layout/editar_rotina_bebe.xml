<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editarHoraEvento"
        android:layout_width="248dp"
        android:layout_height="65dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="43dp"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/botaoEditarRotina"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botaoEditarRotina"
        android:layout_width="174dp"
        android:layout_height="59dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="182dp"
        android:text="Concluir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/clicarEditarHorario"
        android:layout_width="316dp"
        android:layout_height="38dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="26dp"
        android:text="Clique em cima para editar o horário"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/editarHoraEvento"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editarEvento"
        android:layout_width="195dp"
        android:layout_height="41dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        app:layout_constraintBottom_toTopOf="@+id/editarHorario"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewEditarEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="29dp"
        android:text="Evento:"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        app:layout_constraintEnd_toStartOf="@+id/editarEvento"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="25dp"
        android:text="Horário:"
        app:layout_constraintEnd_toStartOf="@+id/editarHorario"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditarEvento" />

    <EditText
        android:id="@+id/editarHorario"
        android:layout_width="195dp"
        android:layout_height="41dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="53dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        app:layout_constraintBottom_toTopOf="@+id/clicarEditarHorario"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>